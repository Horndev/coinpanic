                    </li>
                    <li class="nav-item">
                        <a href="./blog/contact" class="nav-link">Contact</a>
                        @*@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })*@
                    </li>
                </ul>
            </div>
        </nav>
    </div>
