        <div class="container">
            <div class="row text-center">
                <div class="col-md-8">@Html.ActionLink("Legal", "Legal", "Home")</div>
                <div class="col-md-2">
                    <div class="pull-right">
                        
                        <a href="https://github.com/Horndev/coinpanic"><span webicon="foundation:social-github" style="color: #808080;width:32px;height:32px;"></span></a>
