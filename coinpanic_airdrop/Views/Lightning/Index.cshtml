@model coinpanic_airdrop.Models.LnStatusViewModel

<div class="card">
    <h3 class="card-header">Lightning Network node information</h3>
    <p class="card-text">
        <div class="form-group">
            <div class="col-sm-12">
                @{
                    var url = string.Format(
                        "/Lightning/getQr?qr={0}",
                        @Uri.EscapeDataString(ViewBag.URI.ToString()));
                }
                <div class="row justify-content-end">
                    <div class="col-md-8">
                        <h4>Node Name: @ViewBag.Alias</h4>
                        <br />
                        Connection URI: @ViewBag.URI
                        <br />
                        <p class="card-text">
                            <div class="form-group">
                                @*<div class="form-inline">
                                    <div class="form-group">
                                        <label for="totalxfer" class="col-sm-1 col-form-label">Routed</label>
                                        <div class="input-group col-xs-1">
                                            <input type="text" class="form-control input-lg select" id="totalxfer" value="@ViewBag.TotalValueXfer">
                                            <div class="input-group-append">
                                                <span class="input-group-text">BTC</span>
                                            </div>
                                        </div>
                                        <div class="input-group col-xs-1">
                                            <input type="text" class="form-control" id="ntotalxfer" value="@ViewBag.NumXfer">
                                            <div class="input-group-append">
                                                <span class="input-group-text">Transactions</span>
                                            </div>
                                        </div>
                                     </div>
                                </div>*@
                                <div class="col-sm-10">
                                    Number of Channels: @ViewBag.NumChannelsActive online / @ViewBag.NumChannels total
                                    <br />
                                    Total Capacity: @ViewBag.Capacity BTC (Local balance to send: @ViewBag.LocalCapacity BTC; Remote balace to receive: @ViewBag.RemoteCapacity BTC)
                                    <br />
                                    Online Capacity: @ViewBag.ActiveCapacity BTC (Local: @ViewBag.ActiveLocalCapacity BTC; Remote: @ViewBag.ActiveRemoteCapacity BTC)
                                    <br />
                                    This node routed: @ViewBag.TotalValueXfer BTC in @ViewBag.NumXfer payments for fees totalling just @ViewBag.TotalFees BTC.
                                </div>
                            </div>
                        </p>
                    </div>
                    <div class="col-md-4 " style="padding-left: 0px;  padding-right: 0px;">
                        <img src="@url" class="img-fluid" />
                    </div>
                </div>
            </div>
        </div>
    </p>

</div>
<div class="card">
    <h3 class="card-header">Connections</h3>
    
    <table class="table table-bordered table-responsive table-hover">
        <tr>
            <th>Node Alias</th>
            <th>Capacity</th>
            @*<th>Local</th>*@
            <th>L-R</th>
            @*<th>Remote</th>*@
            <th>Transferred</th>
            <th>Connection (now - past)</th>
            <th>Channel Id</th>
            @*<th>Connected</th>*@
        </tr>
        @foreach (var c in Model.channels)
        {
            <tr style="@(!c.ChanInfo.active ? "background-color:LightGray" : String.Empty)">
                <td><a href="https://1ml.com/node/@c.ChanInfo.remote_pubkey">@c.RemoteNode.Alias</a></td>
                <td>@c.ChanInfo.capacity</td>
                @*<td>@c.ChanInfo.local_balance</td>*@
                <td><span id="chanbal" class="inlinebullet" style="display:none">@c.ChanInfo.remote_balance,@c.ChanInfo.capacity</span></td>
                @*<td>@c.ChanInfo.remote_balance</td>*@
                <td>@(Convert.ToString(Convert.ToInt64(c.ChanInfo.total_satoshis_received)+ Convert.ToInt64(c.ChanInfo.total_satoshis_sent))) </td>
                <td><span id="conn" class="inlinesparkline" style="display:none"> @(string.Join(",", c.History.Select(h => h.IsConnected ? "1" : "-1").ToList())) </span></td>
                <td><a href="https://1ml.com/channel/@c.ChanInfo.chan_id">@c.ChanInfo.chan_id</a></td>
                @*<td>
                    @if (c.ChanInfo.active)
                    { <text>yes</text> }
                    else
                    { <text>no</text>  }
                </td>*@
            </tr>
        }
    </table>
    <p>* All units are in Satoshi.</p>
    <p>** L-R indicates balance between local-remote nodes.</p>
</div>

@Scripts.Render("~/bundles/sparkline")
@section scripts
{
    <script src="~/Scripts/jquery.signalR-2.2.3.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script type="text/javascript">
        $(function () {
            $(".inlinesparkline").show();
            $(".inlinebullet").show();
            $('.inlinesparkline').sparkline('html', { type: 'tristate', posBarColor: 'green', negBarColor: 'red', tooltipFormat: "" });
            $('.inlinebullet').sparkline('html', { type: 'bullet', tooltipFormat: "" });
        });

        $(document).ready(function () {

            var hub = $.connection.notificationHub;
            $.connection.hub.start()
                .done(function () {
                    console.log("Hub Connected!");
                })
                .fail(function () {
                    console.log("Could not Connect!");
                });
        });
    </script>  
}